<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/songTitle"
        android:layout_width="293dp"
        android:layout_height="63dp"
        android:layout_marginStart="59dp"
        android:layout_marginEnd="59dp"
        android:layout_marginBottom="44dp"
        android:ems="10"
        android:inputType="text"
        android:hint="Enter Name of song"
        app:layout_constraintBottom_toTopOf="@+id/rate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/artistName"
        android:layout_width="293dp"
        android:layout_height="63dp"
        android:layout_marginStart="59dp"
        android:layout_marginEnd="59dp"
        android:layout_marginBottom="45dp"
        android:ems="10"
        android:inputType="text"
        android:hint="Enter Name of Artist"
        app:layout_constraintBottom_toTopOf="@+id/songTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/rate"
        android:layout_width="293dp"
        android:layout_height="63dp"
        android:layout_marginStart="59dp"
        android:layout_marginEnd="59dp"
        android:layout_marginBottom="48dp"
        android:ems="10"
        android:inputType="number"
        android:hint="Rate (1-5)"
        app:layout_constraintBottom_toTopOf="@+id/commentInit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/commentInit"
        android:layout_width="293dp"
        android:layout_height="63dp"
        android:layout_marginStart="59dp"
        android:layout_marginEnd="59dp"
        android:ems="10"
        android:inputType="text"
        android:hint="Add a comment (Optional)"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="488dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/Anam"
        android:layout_width="314dp"
        android:layout_height="48dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="49dp"
        android:layout_marginBottom="64dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/artistName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>